{
  "name": "write-guard",
  "version": "0.3.0",
  "description": "Enforce file level write access for monorepos",
  "main": "index.js",
  "scripts": {
    "test": "mocha 'src/**/*.test.js' --exclude 'src/**/*.integration.test.js'",
    "test:watch": "npm run test -- --watch",
    "test:integration": "mocha 'src/**/*.integration.test.js'",
    "test:ci": "nyc --reporter=lcov mocha 'src/**/*.test.js'",
    "posttest": "npm run lint",
    "build": "ncc build src/index.js",
    "lint": "eslint . --config .eslintrc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/geritol/write-guard.git"
  },
  "keywords": [
    "access-control",
    "github-action"
  ],
  "author": "Gergo Tolnai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geritol/write-guard/issues"
  },
  "homepage": "https://github.com/geritol/write-guard#readme",
  "devDependencies": {
    "@vercel/ncc": "^0.33.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "mock-fs": "^5.1.2",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1"
  },
  "dependencies": {
    "@octokit/graphql": "^4.8.0",
    "@octokit/rest": "^18.12.0",
    "dotenv": "^10.0.0",
    "git-branch": "^2.0.1",
    "js-yaml": "^4.1.0",
    "lodash.uniq": "^4.5.0",
    "micromatch": "^4.0.4"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
