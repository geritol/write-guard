{
  "name": "write-guard",
  "version": "0.3.0",
  "description": "Enforce file level write access for monorepos",
  "main": "index.ts",
  "scripts": {
    "test": "mocha --require ts-node/register 'src/**/*.test.ts' --exclude 'src/**/*.integration.test.ts'",
    "test:watch": "npm run test -- --watch",
    "test:integration": "mocha --require ts-node/register 'src/**/*.integration.test.ts'",
    "test:ci": "nyc --reporter=lcov mocha --require ts-node/register 'src/**/*.test.ts'",
    "posttest": "npm run lint",
    "build": "ncc build src/index.ts",
    "lint": "eslint . --config .eslintrc",
    "prepare": "husky install",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/geritol/write-guard.git"
  },
  "keywords": [
    "access-control",
    "github-action"
  ],
  "author": "Gergo Tolnai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geritol/write-guard/issues"
  },
  "homepage": "https://github.com/geritol/write-guard#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/git-branch": "^2.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash.uniq": "^4.5.6",
    "@types/micromatch": "^4.0.2",
    "@types/mocha": "^9.0.0",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^17.0.8",
    "@types/rimraf": "^3.0.2",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vercel/ncc": "^0.33.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "mock-fs": "^5.1.2",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "ts-migrate": "^0.1.27",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@octokit/graphql": "^4.8.0",
    "@octokit/rest": "^18.12.0",
    "dotenv": "^10.0.0",
    "git-branch": "^2.0.1",
    "js-yaml": "^4.1.0",
    "lodash.uniq": "^4.5.0",
    "micromatch": "^4.0.4"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
